@model PatientManagementSystem.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    ViewData["HideSidebar"] = true; 
    Layout = "~/Views/Shared/_Layout.cshtml"; 

}

<div class="container mx-auto px-4 py-6">
    <h2 class="text-3xl font-bold text-apple-green mb-6">Register</h2>

    <form asp-action="Register" method="post" class="bg-white shadow-md rounded-lg p-6">
        <div class="mb-4">
            <label asp-for="Email" class="block text-gray-700 font-semibold mb-2"></label>
            <input asp-for="Email" required class="border border-gray-300 p-2 w-full rounded" />
            <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
        </div>
        <div class="mb-4">
            <label asp-for="Username" class="block text-gray-700 font-semibold mb-2"></label>
            <input asp-for="Username" required class="border border-gray-300 p-2 w-full rounded" />
            <span asp-validation-for="Username" class="text-red-500 text-sm"></span>
        </div>
        <div class="mb-4">
            <label asp-for="Password" class="block text-gray-700 font-semibold mb-2"></label>
            <input asp-for="Password" type="password" required class="border border-gray-300 p-2 w-full rounded" />
            <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
        </div>
        <div class="mb-4">
            <label asp-for="ConfirmPassword" class="block text-gray-700 font-semibold mb-2"></label>
            <input asp-for="ConfirmPassword" type="password" required class="border border-gray-300 p-2 w-full rounded" />
            <span asp-validation-for="ConfirmPassword" class="text-red-500 text-sm"></span>
        </div>
        <div class="mb-4">
            <label asp-for="UserRole" class="block text-gray-700 font-semibold mb-2">User Role</label>
            <select asp-for="UserRole" class="border border-gray-300 p-2 w-full rounded" required>
                <option value="">Select Role</option>
                @foreach (var role in Enum.GetValues(typeof(UserRole)).Cast<UserRole>())
                {
                    <option value="@role">@role</option>
                }
            </select>
            <span asp-validation-for="UserRole" class="text-red-500 text-sm"></span>
        </div>
        <button type="submit" class="bg-edward text-gray-700 font-semibold py-2 px-4 rounded hover:bg-stromboli transition duration-300">Register</button>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
