@{
    ViewData["Title"] = "Home Page";
    ViewData["HideSidebar"] = true;
    ViewData["HideHeaderFooter"] = true;
    Layout = "_Layout";
}

<div class="flex flex-col justify-center items-center h-screen">
    <div class="bg-seafoamgreen p-6 rounded-lg shadow-md flex flex-col items-center">
        <!-- Circle Logo Placeholder (Centered) -->
        <div class="bg-red-500 rounded-full w-16 h-16 mb-4"></div>

        <!-- Header Text -->
        <h1 class="text-2xl font-bold text-gray-700 mb-6">Patient Management System</h1>

        <!-- Buttons -->
        <div class="flex justify-center space-x-4 mt-4">
            <a href="@Url.Action("Login", "Account")"
               class="bg-stromboli text-white font-bold py-2 px-4 rounded hover:bg-stromboli transition duration-300">
                Login
            </a>
            <a href="@Url.Action("Register", "Account")"
               class="bg-stromboli text-white font-bold py-2 px-4 rounded hover:bg-stromboli transition duration-300">
                Register
            </a>
        </div>
    </div>
</div>
