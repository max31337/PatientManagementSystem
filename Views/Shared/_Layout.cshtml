@inject IHttpContextAccessor HttpContextAccessor

@{
    var hideSidebar = ViewData["HideSidebar"] as bool? ?? false;
    var hideHeaderFooter = ViewData["HideHeaderFooter"] as bool? ?? false; // Check for hide header/footer
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Patient Management System</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" />
    <script src="~/js/tailwind-config.js"></script>

    <style>
        .bg-applegreen {
            background-color: #8db600;
        }

        .bg-seafoamgreen {
            background-color: #93E9BE;
        }

        .bg-downy {
            background-color: #f0f4f8;
        }

        .bg-stromboli {
            background-color: #4b8b77;
        }

        .bg-edward {
            background-color: #1d4e89;
        }

        /* Ensures full height for the body and html elements */
        html, body {
            position: relative;
        }

        /* Ensures the footer is always at the bottom */
        footer {
            position: relative;
        }
    </style>
</head>
<body class="bg-downy">

    @if (!hideHeaderFooter) // Render header if not hidden
    {
        <header class="bg-stromboli p-4 shadow-md flex items-center">
            <!-- Red Circle Logo Placeholder -->
            <div class="w-9 h-9 bg-red-500 rounded-full mr-4"></div>
            <h1 class="text-white text-s font-bold">Patient Management System</h1>
        </header>
    }

    <div class="flex">
        @if (!hideSidebar)
        {
            @await Html.PartialAsync("_Sidebar")
            // Render the sidebar if not hidden
        }

        <main class="flex-1 p-4">
            <div class="container mx-auto">
                @RenderBody()
            </div>
        </main>
    </div>

    @if (!hideHeaderFooter) // Render footer if not hidden
    {
        <footer class="bg-stromboli text-center p-4 shadow-md">
            <p class="text-white">&copy; @DateTime.Now.Year - Patient Management System</p>
        </footer>
    }

    <!-- Render Scripts Section -->
    @RenderSection("Scripts", required: false)
</body>
</html>
