@inject IHttpContextAccessor HttpContextAccessor

@{
    var hideSidebar = ViewData["HideSidebar"] as bool? ?? false;
    var hideHeaderFooter = ViewData["HideHeaderFooter"] as bool? ?? false; // Check for hide header/footer
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Patient Management System</title>
    <link rel="stylesheet" href="~/css/output.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" />
    <script src="~/js/tailwind-config.js"></script>

</head>
<body class="bg-applegreen flex flex-col min-h-screen">

    @if (!hideHeaderFooter) // Render header if not hidden
    {
        <header class="bg-downy p-2 shadow-md flex items-center sticky top-0 z-10">
            <!-- Red Circle Logo Placeholder -->
            <div class="w-9 h-9 bg-red-500 rounded-full mr-4"></div>
            <h1 class="text-white text-s font-bold">Patient Management System</h1>
        </header>
    }

    <div class="flex">
        @if (!hideSidebar)
        {
            @await Html.PartialAsync("_Sidebar")
            // Render the sidebar if not hidden
        }

        <main class="flex-1 p-4">
            <div class="container mx-auto">
                @RenderBody()
            </div>
        </main>
    </div>

    @if (!hideHeaderFooter) // Render footer if not hidden
    {
        <footer class="bg-stromboli text-center p-3 block shadow-md sticky bottom-0 z-10">
            <p class="text-white">&copy; @DateTime.Now.Year - Patient Management System</p>
        </footer>
    }

    <!-- Render Scripts Section -->
    @RenderSection("Scripts", required: false)
</body>
</html>
