<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Patient Management System</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/js/tailwind-config.js"></script>


</head>
<body class="bg-downy min-h-screen flex flex-col font-sans">
    <!-- Header Section -->
    <header class="bg-downy text-gray-700 shadow-md p-4">
        <div class="container mx-auto flex justify-between items-center">
            <h1 class="text-2xl text-center font-bold">Patient Management System</h1>
        </div>
    </header>

    <!-- Main Content Section -->
    <main class="flex-grow flex items-center justify-center">
        <div class="container mx-auto bg-downy p-8 rounded-lg shadow-lg">
            @RenderBody()
        </div>
    </main>

    <!-- Footer Section -->
    <footer class="bg-stromboli text-center p-4">
        <p class="text-gray-700 text-sm">&copy; @DateTime.Now.Year - Patient Management System</p>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
