@model PatientManagementSystem.Models.LabRecord

@{
    ViewData["Title"] = "Lab Record Details";
}

<div class="container mx-auto px-4 py-6">
    <!-- Flex container to hold the card and image side by side -->
    <div class="flex flex-col lg:flex-row">
        <!-- Lab Record Details Card -->
        <div class="card p-6 bg-white shadow-lg rounded-lg mb-8 flex-1">
            <h3 class="text-2xl font-semibold text-gray-800 mb-4">Details of Lab Record</h3>

            <table class="table-auto w-full">
                <tr>
                    <th class="text-left font-semibold text-gray-700">Lab Record ID</th>
                    <td>@Model.Id</td>
                </tr>
                <tr>
                    <th class="text-left font-semibold text-gray-700">Medical Record ID</th>
                    <td>@Model.MedicalRecordId</td>
                </tr>
                <tr>
                    <th class="text-left font-semibold text-gray-700">Test Type</th>
                    <td>@Model.TestType</td>
                </tr>
                <tr>
                    <th class="text-left font-semibold text-gray-700">Result</th>
                    <td>@Model.Result</td>
                </tr>
                <tr>
                    <th class="text-left font-semibold text-gray-700">Notes</th>
                    <td>@(Model.Notes ?? "N/A")</td>
                </tr>
                <tr>
                    <th class="text-left font-semibold text-gray-700">Test Date</th>
                    <td>@Model.TestDate.ToString("yyyy-MM-dd")</td>
                </tr>
                <tr>
                    <th class="text-left font-semibold text-gray-700">Created At</th>
                    <td>@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                </tr>
            </table>
        </div>

        <!-- Image Section (Right side) -->
        <div class="w-full lg:w-1/3 mt-6 lg:mt-0 lg:ml-6 flex justify-center items-center">
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <img src="@Url.Content(Model.ImagePath)" alt="Lab Test Image" class="max-w-full h-auto rounded-lg shadow-lg" />
            }
            else
            {
                <span class="text-gray-500">No Image Available</span>
            }
        </div>
    </div>

    <!-- Back Button (Updated for Patient Details) -->
    <div class="mt-6">
        <a href="@Url.Action("Details", "MedicalRecord", new { id = Model.MedicalRecordId })"
           class="bg-blue-500 text-white py-1.5 px-3 rounded-md text-sm hover:bg-blue-600 transition duration-300">
            Back to Patient Details
        </a>
    </div>

</div>
