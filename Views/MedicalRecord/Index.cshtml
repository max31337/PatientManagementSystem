@model IEnumerable<MedicalRecord>

@{
    ViewData["Title"] = "Medical Records";
    ViewData["HideFooter"] = true;
}

<div class="container mx-auto px-4 py-6">
    @if (Model == null || !Model.Any())
    {
        <div class="alert bg-red-500 text-white text-center py-4 rounded">
            No medical records has been found.
        </div>
    }
    else
    {
        <h2 class="text-3xl font-bold text-stromboli mb-4">Medical Records</h2>

        <table class="min-w-full bg-white shadow-md rounded-lg overflow-hidden">
            <thead class="bg-stromboli">
                <tr class="text-white">
                    <th class="py-3 px-4 text-left">Patient ID</th>
                    <th class="py-3 px-4 text-left">Record Details</th>
                    <th class="py-3 px-4 text-left">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var record in Model)
                {
                    <tr class="border-b hover:bg-gray-100">
                        <td class="py-2 px-4">@record.PatientId</td>
                        <td class="py-2 px-4">@record.RecordDetails</td>
                        <td class="py-2 px-4">
                            <a href="@Url.Action("Update", "MedicalRecord", new { id = record.Id })"
                               class="text-stromboli hover:underline">Update</a>
                            <a href="@Url.Action("Details", new { id = record.Id })" 
                            class="text-stromboli hover:underline">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
