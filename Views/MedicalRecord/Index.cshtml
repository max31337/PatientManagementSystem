@model IEnumerable<PatientManagementSystem.ViewModels.MedicalRecordViewModel>
@{
    ViewData["HideFooter"] = true;
}

<div class="container mx-auto px-4 py-6">
    <h2 class="text-3xl font-bold text-stromboli mb-4">Medical Records</h2>
    <table class="min-w-full bg-white shadow-md rounded-lg overflow-hidden">
        <thead class="bg-stromboli">
            <tr class="text-white">
                <th class="py-3 px-4 text-left">Patient ID</th>
                <th class="py-3 px-4 text-left">Reason for visit</th>
                <th class="py-3 px-4 text-left">Actions</th>
            </tr>
        </thead>
        <tbody>

            <div>
                <strong>Records Count: @Model.Count()</strong>
            </div>

            @if (Model == null || !Model.Any())
            {
                <tr>
                    <td colspan="3" class="text-center py-4">No medical records available.</td>
                </tr>
            }
            else
            {
                foreach (var record in Model)
                {
                    <tr class="border-b hover:bg-gray-100">
                        <td class="py-2 px-4">@record.PatientId</td>
                        <td class="py-2 px-4">@record.ReasonForVisit</td>
                        <td class="py-2 px-4">
                            @Html.ActionLink("Details", "Details", "MedicalRecord", new { id = record.Id }, new { @class = "text-stromboli hover:underline" })
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
