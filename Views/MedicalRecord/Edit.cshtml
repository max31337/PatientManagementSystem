@model PatientManagementSystem.ViewModels.MedicalRecordViewModel

@{
    ViewData["Title"] = "Edit Medical Record";
}

<div class="container mx-auto px-4 py-6">
    <h2 class="text-3xl font-bold text-stromboli mb-4">Edit Medical Record</h2>

    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()

        <div class="mb-4">
            <label asp-for="PatientId" class="block text-sm font-medium text-gray-700">Patient ID</label>
            <input asp-for="PatientId" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-stromboli focus:border-stromboli" readonly />
            <span asp-validation-for="PatientId" class="text-red-600 text-sm"></span>
        </div>

        <div class="mb-4">
            <label asp-for="RecordDetails" class="block text-sm font-medium text-gray-700">Record Details</label>
            <textarea asp-for="RecordDetails" rows="4" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-stromboli focus:border-stromboli">@Model.RecordDetails</textarea>
            <span asp-validation-for="RecordDetails" class="text-red-600 text-sm"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Allergies" class="block text-sm font-medium text-gray-700">Allergies</label>
            <input asp-for="Allergies" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-stromboli focus:border-stromboli" value="@Model.Allergies" />
            <span asp-validation-for="Allergies" class="text-red-600 text-sm"></span>
        </div>

        <div class="mb-4">
            <label asp-for="ReasonForVisit" class="block text-sm font-medium text-gray-700">Reason for Visit</label>
            <input asp-for="ReasonForVisit" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-stromboli focus:border-stromboli" value="@Model.ReasonForVisit" />
            <span asp-validation-for="ReasonForVisit" class="text-red-600 text-sm"></span>
        </div>

        <div class="mb-4">
            <label asp-for="BloodTestResults" class="block text-sm font-medium text-gray-700">Blood Test Results</label>
            <textarea asp-for="BloodTestResults" rows="4" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-stromboli focus:border-stromboli">@Model.BloodTestResults</textarea>
            <span asp-validation-for="BloodTestResults" class="text-red-600 text-sm"></span>
        </div>

        <div class="mb-4">
            <label asp-for="PhysicalExamResults" class="block text-sm font-medium text-gray-700">Physical Exam Results</label>
            <textarea asp-for="PhysicalExamResults" rows="4" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-stromboli focus:border-stromboli">@Model.PhysicalExamResults</textarea>
            <span asp-validation-for="PhysicalExamResults" class="text-red-600 text-sm"></span>
        </div>


        <div class="mb-4">
            <label class="block text-sm font-medium text-gray-700">Upload X-Ray Image</label>
            <input type="file" name="xRayImage" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-stromboli focus:border-stromboli" accept="image/*" />
            <span class="text-sm text-gray-500">Current Image: <img src="@Model.XRayImagePath" alt="X-Ray Image" class="mt-2 h-32" /></span>
        </div>

        <div class="mb-4">
            <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-stromboli hover:bg-stromboli-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-stromboli">
                Save Changes
            </button>
            <a asp-action="Index" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500">
                Cancel
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
