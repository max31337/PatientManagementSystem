@model PatientManagementSystem.Models.MedicalRecord

@{
    ViewData["Title"] = "Add Medical Record";
    ViewData["HideFooter"] = true;
}

<h2 class="text-2xl font-bold mb-4">Add Medical Record</h2>

<div class="card p-6">
    <form asp-action="Add" method="post">
        @Html.AntiForgeryToken()

        <div class="form-group mb-4">
            <label for="PatientId">Select Patient</label>
            <select asp-for="PatientId" class="form-control" asp-items="ViewBag.PatientDropdown">
                <option value="">-- Select a Patient --</option>
            </select>
            @Html.ValidationMessageFor(model => model.PatientId, null, new { @class = "text-danger" })
        </div>

        <div class="form-group mb-4">
            <label for="Doctor">Doctor</label>
            <input asp-for="Doctor" class="form-control" />
            @Html.ValidationMessageFor(model => model.Doctor, null, new { @class = "text-danger" })
        </div>

        <div class="form-group mb-4">
            <label for="Department">Department</label>
            <input asp-for="Department" class="form-control" />
            @Html.ValidationMessageFor(model => model.Department, null, new { @class = "text-danger" })
        </div>

        <div class="form-group mb-4">
            <label for="RecordDetails">Record Details</label>
            <textarea asp-for="RecordDetails" class="form-control"></textarea>
            @Html.ValidationMessageFor(model => model.RecordDetails, null, new { @class = "text-danger" })
        </div>

        <div class="form-group mb-4">
            <label for="MedicalHistory">Medical History</label>
            <textarea asp-for="MedicalHistory" class="form-control"></textarea>
            @Html.ValidationMessageFor(model => model.MedicalHistory, null, new { @class = "text-danger" })
        </div>

        <div class="form-group mb-4">
            <label for="CurrentMedications">Current Medications</label>
            <textarea asp-for="CurrentMedications" class="form-control"></textarea>
            @Html.ValidationMessageFor(model => model.CurrentMedications, null, new { @class = "text-danger" })
        </div>

        <div class="form-group mb-4">
            <label for="Notes">Notes</label>
            <textarea asp-for="Notes" class="form-control"></textarea>
            @Html.ValidationMessageFor(model => model.Notes, null, new { @class = "text-danger" })
        </div>

        <div class="form-group text-right">
            <button type="submit" class="btn btn-primary">Save Medical Record</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function updatePatientInfo() {
            var selectedPatientId = document.querySelector('select[name="PatientId"]').value;

            if (selectedPatientId) {
                var selectedOption = document.querySelector('select[name="PatientId"] option[value="' + selectedPatientId + '"]');
                var patientName = selectedOption.text;
                document.getElementById("PatientInfo").value = "ID: " + selectedPatientId + " - " + patientName;
            } else {
                document.getElementById("PatientInfo").value = "";
            }
        }
    </script>
}
