@model MedicalRecord

@{
    ViewData["Title"] = "Medical Record Details";
}

<div class="container mx-auto px-4 py-6">
    <h2 class="text-3xl font-bold text-stromboli mb-4">Medical Record Details</h2>

    <div class="bg-white shadow-md rounded-lg p-6 border border-gray-300">
        <h3 class="text-xl font-semibold border-b pb-2 mb-4">Patient Information</h3>
        <div class="grid grid-cols-2 gap-4">
            <div>
                <p><strong>Name:</strong> @Model.Patient.FullName</p>
                <p><strong>Address:</strong> @Model.Patient.Address</p>
                <p><strong>Allergies:</strong> @Model.Allergies</p>
            </div>
            <div>
                <p><strong>Patient ID:</strong> @Model.PatientId</p>
                <p><strong>Date of Birth:</strong> @Model.Patient.DateOfBirth.ToString("MM/dd/yyyy")</p>
            </div>
        </div>

        <h3 class="text-xl font-semibold border-b pb-2 mt-4">Reason for Visit</h3>
        <p>@Model.ReasonForVisit</p>

        <h3 class="text-xl font-semibold border-b pb-2 mt-4">Test Results</h3>
        <div class="grid grid-cols-2 gap-4">
            <div>
                <p><strong>Blood Test Results:</strong> @Model.BloodTestResults</p>
            </div>
            <div>
                <p><strong>Physical Exam Results:</strong> @Model.PhysicalExamResults</p>
            </div>
        </div>

        <h3 class="text-xl font-semibold border-b pb-2 mt-4">X-Ray Image</h3>
        @if (!string.IsNullOrEmpty(Model.XRayImagePath))
        {
            <img src="@Url.Content(Model.XRayImagePath)" alt="X-Ray Image" class="w-full max-w-md mb-4" />
        }
        else
        {
            <p>No X-Ray image available.</p>
        }

        <h3 class="text-xl font-semibold border-b pb-2 mt-4">Record Details</h3>
        <p>@Model.RecordDetails</p>

        <div class="mt-6">
            <a href="@Url.Action("Edit", "MedicalRecord", new { id = Model.Id })" class="inline-block bg-stromboli text-white px-4 py-2 rounded shadow hover:bg-stromboli-dark">Edit Record</a>
            <a href="@Url.Action("Index", "MedicalRecord")" class="inline-block bg-gray-400 text-white px-4 py-2 rounded ml-2 hover:bg-gray-500">Back to List</a>
        </div>
    </div>
</div>

<style>
    .bg-stromboli {
        background-color: #2b4d1f; /* Example Stromboli color */
    }

    .bg-stromboli-dark {
        background-color: #1e3312; /* Darker shade for hover */
    }
</style>
